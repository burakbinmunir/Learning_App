<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Image View for displaying the career roadmap image -->
    <ImageView
        android:id="@+id/image_career_roadmap"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:contentDescription="@string/career_roadmap_image"
        android:scaleType="centerCrop"
        android:src="@drawable/account_circle" />

    <TextView
        android:id="@+id/text_roadmap_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_career_roadmap"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:text="Roadmap"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- TextView below the Image -->
    <TextView
        android:id="@+id/text_below_image"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_below="@id/text_roadmap_heading"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/the_career_path_typically_involves"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:background="@color/white"
        android:elevation="4dp"
        android:translationZ="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"/>


    <!-- Heading for Frequently Asked Questions -->
    <TextView
        android:id="@+id/text_faq_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_below_image"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:text="@string/frequently_asked_questions"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- FAQ ListView -->
    <ListView
        android:id="@+id/listview_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_faq_heading"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@drawable/listview_background"
        android:clipToPadding="false" />


</RelativeLayout>
